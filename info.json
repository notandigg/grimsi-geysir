                        "evaluate": "all",
                        "conditions": [{
                            "option": "show_slideshow_overlay",
                            "not": "false"
                        }]
                    },
                    "scoped_values": true,
                    "value": "true"
                },
                "intro_text": {
                    "label": "Intro text",
                    "type": "string",
                    "scope": ["home"],
                    "value": "Geysir, a new free Koken theme",
                    "scoped_values": true,
                    "dependencies": {
                        "evaluate": "all",
                        "conditions": [{
                            "option": "show_intro_text",
                            "not": "false"
                        }]
                    }
                },
                "show_section_buttons": {
                    "label": "Show section buttons",
                    "type": "boolean",
                    "scope": ["home"],
                    "control_first": true,
                    "dependencies": {
                        "evaluate": "all",
                        "conditions": [{
                            "option": "show_slideshow_overlay",
                            "not": "false"
                        }]
                    },
                    "scoped_values": true,
                    "value": "true"
                },
                "animation_type": {
                    "label": "Animation",
                    "type": "select",
                    "scope": ["home"],
                    "scoped_values": true,
                    "reload_preview": true,
                    "options": [{
                        "label": "None",
                        "value": ""
                    }, {
                        "label": "Bounce in up",
                        "value": "bounceInUp"
                    }, {
                        "label": "Bounce in down",
                        "value": "bounceInDown"
                    }, {
                        "label": "Fade in up",
                        "value": "fadeInUp"
                    }, {
                        "label": "Fade in down",
                        "value": "fadeInDown"
                    }],
