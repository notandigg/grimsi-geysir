{
    "name": "Geysir",
    "version": "1.3.0",
    "description": "Free Bootstrap 4 (Mobile ready) theme for Koken, with pjax and nprogress for smoother content and essay browsing. This theme also supports the new search feature, to search for tags.",
    "demo": "http://grimur.net",
    "author": {
        "name": "Grimur Gudmundsson",
        "link": "http://grimur.net"
    },

    "default_front_page": "home",

    "settings": {
        "Scroll to top": {
            "icon": "layout",
            "control_first": true,
            "settings": {
                "scrolltotop": {
                    "label": "Style",
                    "type": "select",
                    "options": [{
                        "label": "Style1",
                        "value": "1"
                    }, {
                        "label": "Style2",
                        "value": "2"
                    }],
                    "value": "2"
                }
            }
        },
        "Homepage": {
            "icon": "layout",
            "settings": {
                "show_slideshow": {
                    "label": "Show slideshow",
                    "type": "boolean",
                    "scope": ["home"],
                    "scoped_values": true,
                    "control_first": true,
                    "value": "true"
                },
                "slideshow_source": {
                    "note": "Choose the source for the slideshow",
                    "label": "Slideshow Source",
                    "type": "select",
                    "scope": ["home"],
                    "scoped_values": true,
                    "options": [{
                        "label": "Favorites",
                        "value": "favorites"
                    }, {
                        "label": "Album",
                        "value": "album"
                    }, {
                        "label": "Featured Albums",
                        "value": "featured_albums"
                    }, {
                        "label": "Featured Content",
                        "value": "featured_content"
                    }, {
                        "label": "Contents",
                        "value": "contents"
                    }],
                    "dependencies": {
                        "evaluate": "all",
                        "conditions": [{
                            "option": "show_slideshow",
                            "not": "false"
                        }]
                    },
                    "value": "favorites"
                },
                "show_slideshow_overlay": {
                    "label": "Show slideshow overlay",
                    "type": "boolean",
                    "scope": ["home"],
                    "scoped_values": true,
                    "control_first": true,
                    "dependencies": {
                        "evaluate": "all",
                        "conditions": [{
                            "option": "show_slideshow",
                            "not": "false"
                        }]
                    },
                    "value": "true"
                },
                "show_intro_text": {
                    "label": "Show intro text",
                    "type": "boolean",
                    "scope": ["home"],
                    "control_first": true,
